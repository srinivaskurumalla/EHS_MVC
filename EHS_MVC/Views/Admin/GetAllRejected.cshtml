        <div class="row">
            <div class="col">
                <h2>List of All Properties</h2>
            </div>

        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>Property Type</th>


                    <th>Property Name</th>
                    <th>Price Range</th>
                    <th>Seller Details</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var house in Model.HouseViewModels)
                {
                    <tr>
                        <td>@house.PropertyType</td>
                        <td>@house.PropertyName</td>
                        <td>@house.PriceRange</td>
                        <td>@house.UserDetailsId</td>


                        <td>
