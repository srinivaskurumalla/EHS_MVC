@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<h2> Login </h2>




<div class="container">
    <div class="row">
        <div class="col-4 offset-4 border border-primary rounded pl-5 pr-5 pb-3"  >
            <form asp-controller="Accounts" asp-action="Login" method="post">
                <div class="row">
                    <div class="form-group">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Username" class="form-label"></label>
                            <input type="text" asp-for="Username"  placeholder="Enter User Name"class="form-control" />
                            <span asp-validation-for="Username" class="text-bg-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="form-label"></label>
                            <input type="password" asp-for="Password" placeholder="Enter Password" class="form-control" name="password" />
                            <span asp-validation-for="Password"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" class="btn btn-block btn-primary " value="Sign In" />
                        </div>
                        <div class="text-center">
                            <a class="text-primary" asp-action="ForgotUsername">Forgot Username?</a>
                            <a class="text-primary" asp-action="ForgotPassword">Forgot Password       </a>


                        </div>

                        <div class="text-left">
                           <h6 class="text-bg-danger">New Account <a class="text-light  btn btn-primary "> Sign Up</a></h6>

                        </div>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>