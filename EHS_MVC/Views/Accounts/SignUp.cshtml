@model RolesSignUpViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Sign Up</h1>

<form asp-controller="Accounts" asp-action="SignUp" method="post">
    <div class="row">
        <div class="col-md-4">
            <div class="mb-2">
                <label asp-for="@Model.SignUpRoles.UserName" class="form-label"></label>
                <input type="text" asp-for="@Model.SignUpRoles.UserName" class="form-control" />
                <span asp-validation-for="@Model.SignUpRoles.UserName"></span>
            </div>
            <div class="mb-2">
                <label asp-for="@Model.SignUpRoles.FullName" class="form-label"></label>
                <input type="text" asp-for="@Model.SignUpRoles.FullName" class="form-control" />
                <span asp-validation-for="@Model.SignUpRoles.FullName"></span>
            </div>

            <div class="mb-2">
                <label asp-for="@Model.SignUpRoles.Email" class="form-label"></label>
                <input type="text" asp-for="@Model.SignUpRoles.Email" class="form-control" />
                <span asp-validation-for="@Model.SignUpRoles.Email"></span>
            </div>
            <div class="mb-2">
                <label asp-for="@Model.SignUpRoles.Password" class="form-label"></label>
                <input type="password" asp-for="@Model.SignUpRoles.Password" class="form-control" />
                <span asp-validation-for="@Model.SignUpRoles.Password"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedValue"></label>
                <select name="selectedValue" asp-for="SelectedValue" asp-items="Model.Values"></select>
            </div>
            <div class="mb-2">
                <label asp-for="@Model.SignUpRoles.ConfirmPassword" class="form-label"></label>
                <input type="password" asp-for="@Model.SignUpRoles.ConfirmPassword" class="form-control" />
                <span asp-validation-for="@Model.SignUpRoles.ConfirmPassword"></span>
            </div>
            <div class="mb-2">
                <label asp-for="@Model.SignUpRoles.PhoneNumber" class="form-label"></label>
                <input type="text" asp-for="@Model.SignUpRoles.PhoneNumber" class="form-control" />
                <span asp-validation-for="@Model.SignUpRoles.PhoneNumber"></span>
            </div>
            <div class="mt-2 d-grid">
                <input type="submit" class="btn btn-primary" value="Add New" />
            </div>
        </div>
    </div>
</form>

