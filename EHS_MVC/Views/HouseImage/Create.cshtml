@model HouseImageViewModel
<div class="row m-5 "></div>


<div class="col-4"></div>

<div class="col-8 offset-2">

    <a asp-controller="House" class="btn btn-warning" asp-action="Index">Back to List</a>

    <form class="mt-5"  asp-controller="HouseImage" asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="CoverImage">Select Image </label>
        <input type="file" asp-for="CoverImage" class="form-control" id="inputGroupFile04" aria-describedby="inputGroupFileAddon04" aria-label="Upload" />
        <span asp-validation-for="CoverImage"></span>
    </div>
    <div class="form-group">
        <label asp-for="ImageName"></label>
        <input type="text" asp-for="ImageName" class="form-control" />
        <span asp-validation-for="ImageName"></span>
    </div>
    <div class="form-group">
        @*<label asp-for="HouseId"></label>*@
        <input type="hidden" asp-for="HouseId" class="form-control" />
        <span asp-validation-for="HouseId"></span>
    </div>
    <button type="submit" class="btn btn-outline-secondary mt-2"  id="inputGroupFileAddon04">Click to Add Image</button>
</form>
</div>
